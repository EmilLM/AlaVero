"""mutation root"""
type mutation_root {
  """"""
  changePassword(currentPassword: String!, password: String!, passwordConfirmation: String!): BasicResponse!

  """"""
  confirmResetPassword(confirmPassword: String!, password: String!, token: String!): BasicResponse!

  """"""
  loginEmail(email: String!, password: String!): LoginInfo!

  """"""
  loginUsername(password: String!, username: String!): LoginInfo!

  """"""
  loginUsernameOrEmail(password: String!, usernameOrEmail: String!): LoginInfo!

  """"""
  logout: BasicResponse!

  """"""
  register(info: RegisterInfo!): LoginInfo!

  """"""
  resetPassword(email: String!): BasicResponse!

  """"""
  updatePlayerInfo(info: UpdatePlayerInfo!): BasicResponse!

  """"""
  verifyEmail(token: String!): BasicResponse!
}

type query_root {
  """"""
  checkPlayer: CheckPlayerInfo!

  """"""
  getSessionInfo: GetSessionInfo!

  """"""
  getTags: GetTags!
  getBasic: BasicResponse
}

