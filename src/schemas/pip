schema {
  query: query_root
  mutation: mutation_root
}

"""whether this query should be cached (Hasura Cloud only)"""
directive @cached(
  """measured in seconds"""
  ttl: Int! = 60

  """refresh the cache entry"""
  refresh: Boolean! = false
) on QUERY

""""""
type BasicResponse {
  """"""
  success: Boolean!
}

""""""
